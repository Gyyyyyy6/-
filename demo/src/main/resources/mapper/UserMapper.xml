<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.IUserMapper">
<!--/**
     * 新增用户
    Integer insert(@Param("id") String id, @Param("username") String username, @Param("password") String password);-->
    <insert id="insert">
        INSERT INTO
        user(
        id,
        username,
        password
        )VALUES (
        #{id},
        #{username},
        #{password}
        )
    </insert>

    <!--/**
     * 删除用户
    Integer delete(@Param("id") String id, @Param("isDelete") Integer isDelete);-->
    <update id="delete">
        UPDATE
        user
        SET
        is_delete = 1
        WHERE
        id = #{id}
    </update>

    <!--/**
     * 修改用户
    Integer update(@Param("id") String id, @Param("username") String username, @Param("password") String password);-->
    <update id="update">
        UPDATE
        user
        SET
        username = #{username},
        password = #{password}
        WHERE
        id = #{id}
    </update>

    <!--/**
     * 根据id查找用户
    String getById(@Param("id") String id);-->
    <select id="getById" resultType="com.example.demo.entity.User">
        SELECT
        *
        FROM
        user
        WHERE
        id = #{id}
        AND
        is_delete != 1
    </select>

    <!--/**
     * 根据用户名查找用户
    Integer getUserByName (@Param("username") String username);-->
    <select id="getUserByName" resultType="com.example.demo.entity.User">
        SELECT
        *
        FROM
        user
        WHERE
        username = #{username}
        AND
        is_delete != 1
    </select>

    <!--/**
     * 查询用户名数量
    Integer count(@Param("username") String username);-->
    <select id="count">
        SELECT
        COUNT(*)
        FROM
        user
        WHERE
        username = #{username}
    </select>
</mapper>
